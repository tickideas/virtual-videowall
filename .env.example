# LiveKit (Client-side - must be publicly accessible)
NEXT_PUBLIC_LIVEKIT_URL="ws://localhost:7880"

# App Settings
NEXT_PUBLIC_APP_NAME="Virtual Video Wall"
NEXT_PUBLIC_MAX_CHURCHES=60
